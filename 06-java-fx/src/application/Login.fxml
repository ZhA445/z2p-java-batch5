<AnchorPane prefHeight="436.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <Pane layoutY="49.0" prefHeight="86.0" prefWidth="550.0" style="-fx-background-color: #ff944d;">
